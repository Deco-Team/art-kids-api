  Tên: <%= customer.name %>
  Email: <%= customer.email %>
  Số điện thoại: <%= customer.phone %>

Chi tiết đơn hàng:
    <table style="width: 100%; border-collapse: collapse;">
      <thead>
        <tr style="background-color: #a9a3a3; color: #fff;">
